{
    "manifest_version": 3,
    "name": "LLM 網頁助手",
    "version": "1.0",
    "description": "在瀏覽網頁時隨時向 LLM 提問，並分享當前網頁內容和截圖",
    "action": {
      "default_icon": {
        "16": "assets/icon16.png",
        "48": "assets/icon48.png",
        "128": "assets/icon128.png"
      }
    },
    "permissions": [
      "activeTab",
      "tabs",
      "scripting",
      "storage"
    ],
    "host_permissions": [
      "https://llmwebassistant.onrender.com/*",
      "<all_urls>"
    ],
    "background": {
      "service_worker": "background/background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content/contentScript.js"],
        "css": ["content/sidebar.css"]
      }
    ],
    "icons": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    },
    "web_accessible_resources": [
      {
        "resources": ["utils/*.js", "popup/popup.css", "sidebar/*.html", "sidebar/*.js", "assets/*", "utils/markdown.js"],
        "matches": ["<all_urls>"]
      }
    ],
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'"
    }
}
  
  